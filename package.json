    "metal-react": "^0.1.0"
  },
  "devDependencies": {
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-metal-jsx": "^0.0.2",
    "webpack": "^1.13.0"
  }
}
