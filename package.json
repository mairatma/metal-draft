{
  "name": "metal-draft",
  "version": "0.0.0",
  "description": "Example showing how to use Draf.js inside Metal.js",
  "license": "BSD",
  "repository": "metal/metal-draft",
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=3.0.0"
  },
  "main": "lib/Example.js",
  "jsnext:main": "src/Example.js",
  "files": [
    "lib",
    "src",
